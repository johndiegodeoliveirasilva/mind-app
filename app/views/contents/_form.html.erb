<% if @content.errors.any? %>
  Error: <%= @content.errors.full_messages.join(', ' ) %>
<% end %>
<br>
<%= form_with(model: @content, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <br>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :tags, class: 'form-label' %>
    <%= form.select :tags, options_for_select(current_user.tags.pluck(:name), @content.tags.pluck(:name)), {}, { class: "select2 form-control", multiple: "multiple", style: "width: 50%" } %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label'%>
    <%= form.text_area   :description, class: 'form-control'%>
  </div>
  <br>
  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>